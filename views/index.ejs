<%- include('partials', { title: 'Cherkasy Outage Watcher' }) %>

<section class="card">
  <% if (!latest) { %>
    <p>No updates parsed yet. Check back soon.</p>
  <% } else { %>
    <div class="meta">Updated: <%= latest.date %></div>
    <p><%= latest.text %></p>
    <a class="button" href="<%= latest.url %>" target="_blank" rel="noopener">View on Telegram</a>
  <% } %>
</section>

<section class="card">
  <small>Source: <a href="<%= sourceUrl %>" target="_blank" rel="noopener"><%= sourceUrl %></a></small>
</section>

<%- include('footer') %>
